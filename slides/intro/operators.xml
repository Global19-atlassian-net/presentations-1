<example title="Some Examples" result="1"><![CDATA[<?php
	$a = 254 + 1;
	echo $a   . "<br />";	
	echo --$a . "<br />";
	echo ($a & 1) . "<br />";
	echo ($a & 127) . "<br />";
	echo ($a >> 1) . "<br />";
?>]]></example>

