?>]]></example>

<example title="XPath" result="0"><![CDATA[<?php
$ctx = new domXPath($dom);
$result = $ctx->query(
  '/breakfast_menu/food[@itemno > 3]/price/text()');

foreach($result as $node) {
  echo $node->nodeValue."<br />\n";
}
?>]]></example>

<example title="SimpleXML" result="0"><![CDATA[<?php
